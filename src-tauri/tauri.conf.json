{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Mechy Keyboard",
    "version": "1.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "title": "Mechy Keyboard",
      "menuOnLeftClick": true
    },
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": "^.+$",
        "sidecar": false
      },
      "window": {
        "all": false,
        "startDragging": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "removeDir": true,
        "scope": [
          "$APPDATA/**/*",
          "$APPCACHE/**/*",
          "$APPCACHE",
          "$APPLOG/**/*"
        ],
        "writeFile": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.jkominovic.mechy-keyboard",
      "longDescription": "Give your keyboard a voice. Simulate the sounds of typing on a mechanical keyboard.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": "-"
      },
      "resources": [],
      "shortDescription": "Give your keyboard a voice.",
      "targets": ["deb", "dmg", "app"],
      "publisher": "Julian Kominovic",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: asset: 'unsafe-eval' 'unsafe-inline' 'self';"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/JulianKominovic/mechy-keyboard/releases/download/updater/update.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMzMkMxNkIzMTBCOUQ2MkMKUldRczFya1FzeFlzdzlZb1F2MStJSittVUxBVDF1SjBVamJ6SmlWU3ZwdXpsN1VOMDFHUVhSTTMK"
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": false,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "title": "Mechy Keyboard",
        "width": 800,
        "fileDropEnabled": false,
        "skipTaskbar": true
      }
    ]
  }
}
